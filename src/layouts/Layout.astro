---
const {
	title = 'Gage DeZoort Â· Particle Physics & Machine Learning',
	description = 'Postdoctoral researcher exploring the interface of high-energy physics and machine learning.',
	ogImage = '/images/headshot.jpg',
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content={description} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={ogImage} />
		<meta property="og:type" content="website" />
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content={ogImage} />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Sora:wght@400;500;600;700&display=swap"
			rel="stylesheet"
		/>
	</head>
	<body>
		<div class="particle-field" aria-hidden="true">
			<span class="track track--one"></span>
			<span class="track track--two"></span>
			<span class="track track--three"></span>
			<span class="track track--four"></span>
			<span class="track track--five"></span>
		</div>
		<div class="page-shell">
			<slot />
		</div>
	</body>
</html>

<style is:global>
	*,
	*::before,
	*::after {
		box-sizing: border-box;
	}

	:root {
		color-scheme: dark;
		--bg: #020617;
		--surface: rgba(2, 6, 23, 0.78);
		--surface-strong: rgba(15, 23, 42, 0.92);
		--text: #e2e8f0;
		--text-soft: #94a3b8;
		--accent: #38bdf8;
		--accent-soft: rgba(56, 189, 248, 0.22);
		--border: rgba(148, 163, 184, 0.18);
		--max-width: 1080px;
	}

	html {
		background: var(--bg);
	}

	body {
		margin: 0;
		min-height: 100vh;
		position: relative;
		font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
		color: var(--text);
		background:
			radial-gradient(120% 90% at 85% 0%, rgba(56, 189, 248, 0.16), transparent 60%),
			radial-gradient(120% 90% at 0% 100%, rgba(168, 85, 247, 0.15), transparent 60%),
			var(--bg);
	}

	body::before {
		content: '';
		position: fixed;
		inset: 0;
		pointer-events: none;
		background-image:
			radial-gradient(1px 1px at 10% 20%, rgba(226, 232, 240, 0.12), transparent 55%),
			radial-gradient(1px 1px at 20% 80%, rgba(56, 189, 248, 0.12), transparent 55%),
			radial-gradient(1px 1px at 75% 30%, rgba(168, 85, 247, 0.14), transparent 55%),
			radial-gradient(1px 1px at 60% 65%, rgba(94, 234, 212, 0.12), transparent 55%);
		opacity: 0.55;
		z-index: -1;
	}

	body::after {
		content: '';
		position: fixed;
		inset: 0;
		pointer-events: none;
		background: radial-gradient(120% 85% at 50% 10%, rgba(15, 118, 110, 0.18), transparent 75%);
		opacity: 0.25;
		z-index: -2;
	}

	.particle-field {
		position: fixed;
		inset: -15vh -15vw;
		z-index: -1;
		pointer-events: none;
		opacity: 0.7;
	}

	.track {
		position: absolute;
		display: block;
		border-radius: 50%;
		border: 1px solid rgba(56, 189, 248, 0.18);
		box-shadow: 0 0 65px rgba(56, 189, 248, 0.08);
		animation: track-spin 28s linear infinite;
	}

	.track::after {
		content: '';
		position: absolute;
		top: 50%;
		left: 50%;
		width: 12px;
		height: 12px;
		margin: -6px;
		border-radius: 50%;
		background: radial-gradient(circle, rgba(244, 244, 255, 0.95), rgba(56, 189, 248, 0.35));
		box-shadow: 0 0 22px rgba(56, 189, 248, 0.45);
	}

	.track--one {
		width: 540px;
		height: 320px;
		top: 12%;
		left: 5%;
		transform-origin: 60% 48%;
		animation-duration: 36s;
	}

	.track--two {
		width: 420px;
		height: 420px;
		top: 42%;
		left: 68%;
		border-color: rgba(168, 85, 247, 0.22);
		box-shadow: 0 0 70px rgba(168, 85, 247, 0.12);
		transform-origin: 35% 52%;
		animation-duration: 44s;
		animation-direction: reverse;
	}

	.track--three {
		width: 620px;
		height: 380px;
		top: 58%;
		left: -12%;
		border-color: rgba(94, 234, 212, 0.18);
		box-shadow: 0 0 54px rgba(94, 234, 212, 0.14);
		transform-origin: 62% 35%;
		animation-duration: 50s;
	}

	.track--four {
		width: 280px;
		height: 280px;
		top: 8%;
		left: 72%;
		border-color: rgba(248, 250, 252, 0.15);
		box-shadow: 0 0 40px rgba(148, 163, 184, 0.15);
		transform-origin: 45% 60%;
		animation-duration: 32s;
	}

	.track--five {
		width: 360px;
		height: 560px;
		top: 65%;
		left: 48%;
		border-color: rgba(59, 130, 246, 0.18);
		box-shadow: 0 0 65px rgba(37, 99, 235, 0.18);
		transform-origin: 52% 40%;
		animation-duration: 41s;
		animation-direction: reverse;
	}

	.track--one::after {
		transform: translate3d(220px, -128px, 0);
	}

	.track--two::after {
		transform: translate3d(148px, -198px, 0);
	}

	.track--three::after {
		transform: translate3d(270px, -90px, 0);
	}

	.track--four::after {
		transform: translate3d(110px, -140px, 0);
	}

	.track--five::after {
		transform: translate3d(150px, -240px, 0);
	}

	@keyframes track-spin {
		from {
			transform: rotate(0deg);
		}
		to {
			transform: rotate(360deg);
		}
	}

	@media (prefers-reduced-motion: reduce) {
		.particle-field {
			display: none;
		}
	}

	.page-shell {
		display: flex;
		flex-direction: column;
		padding: clamp(1.75rem, 3vw, 3rem) clamp(1.25rem, 6vw, 3.5rem);
	}

	a {
		color: var(--accent);
		text-decoration: none;
	}

	a:hover,
	a:focus-visible {
		color: #7dd3fc;
	}

	p {
		margin: 0;
		line-height: 1.7;
	}

	.section-card {
		background: var(--surface);
		border-radius: 26px;
		border: 1px solid var(--border);
		box-shadow: 0 28px 80px rgba(2, 6, 23, 0.45);
		backdrop-filter: blur(18px);
		padding: clamp(1.85rem, 3vw, 2.75rem);
		position: relative;
		overflow: hidden;
	}

	.section-card::after {
		content: '';
		position: absolute;
		inset: 1px;
		border-radius: 24px;
		pointer-events: none;
		border: 1px solid rgba(148, 163, 184, 0.08);
	}

	.section-title {
		margin: 0 0 1rem;
		font-family: 'Sora', 'Inter', sans-serif;
		font-size: clamp(1.5rem, 2vw, 2.1rem);
		font-weight: 600;
		letter-spacing: -0.01em;
		color: var(--text);
	}

	.section-lede {
		margin: 0 0 1.35rem;
		color: var(--text-soft);
		font-size: clamp(0.98rem, 1vw, 1.12rem);
		line-height: 1.75;
	}
</style>
