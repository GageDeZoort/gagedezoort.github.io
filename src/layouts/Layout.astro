---
const {
	title = 'Gage DeZoort Â· Particle Physics & Machine Learning',
	description = 'Postdoctoral researcher exploring the interface of high-energy physics and machine learning.',
	ogImage = '/images/headshot.jpg',
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content={description} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={ogImage} />
		<meta property="og:type" content="website" />
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content={ogImage} />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Fraunces:opsz,wght@9..144,400;600&display=swap"
			rel="stylesheet"
		/>
	</head>
	<body>
		<div class="page-shell">
			<slot />
		</div>
	</body>
</html>

<style is:global>
	*,
	*::before,
	*::after {
		box-sizing: border-box;
	}

	:root {
		color-scheme: light;
		--bg: #f6f5f2;
		--surface: rgba(255, 255, 255, 0.88);
		--surface-strong: rgba(255, 255, 255, 0.96);
		--text: #1c1f24;
		--text-soft: #4f5663;
		--accent: #335cff;
		--accent-soft: rgba(51, 92, 255, 0.12);
		--border: rgba(28, 31, 36, 0.08);
		--max-width: 960px;
	}

	html {
		background: var(--bg);
	}

	body {
		margin: 0;
		min-height: 100vh;
		font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
		color: var(--text);
		background: radial-gradient(circle at top right, rgba(51, 92, 255, 0.1), transparent 55%),
			radial-gradient(circle at bottom left, rgba(15, 116, 182, 0.12), transparent 50%),
			var(--bg);
	}

	.page-shell {
		display: flex;
		flex-direction: column;
		padding: clamp(1.5rem, 2.5vw, 2.75rem) clamp(1.25rem, 6vw, 3rem);
	}

	a {
		color: inherit;
		text-decoration: none;
	}

	a:hover,
	a:focus-visible {
		text-decoration: underline;
		text-decoration-thickness: 0.1em;
		text-decoration-color: var(--accent);
		text-underline-offset: 0.2em;
	}

	.section-card {
		background: var(--surface);
		border-radius: 24px;
		border: 1px solid var(--border);
		box-shadow: 0 18px 40px rgba(22, 33, 52, 0.08);
		backdrop-filter: blur(14px);
		padding: clamp(1.75rem, 3vw, 2.5rem);
	}

	.section-title {
		margin: 0 0 1rem;
		font-family: 'Fraunces', 'Times New Roman', serif;
		font-size: clamp(1.4rem, 1.8vw, 2rem);
		font-weight: 600;
		letter-spacing: -0.01em;
	}

	.section-lede {
		margin: 0 0 1.25rem;
		color: var(--text-soft);
		font-size: clamp(0.95rem, 1vw, 1.08rem);
		line-height: 1.7;
	}
</style>
