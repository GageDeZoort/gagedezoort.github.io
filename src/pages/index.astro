import Layout from '../layouts/Layout.astro';

const pageTitle = 'Gage DeZoort · Particle Physics & Machine Learning';
const description =
	'Postdoctoral researcher at Princeton designing graph neural network methods for high-energy physics and precision discovery.';

const highlights = [
	{
		kicker: 'Review',
		title: 'Graph Neural Networks at the Large Hadron Collider',
		url: 'https://doi.org/10.1038/s42254-023-00569-0',
		description:
			'Surveying geometric deep learning advances that power tracking, triggering, and anomaly discovery at the HL-LHC.',
	},
	{
		kicker: 'Journal',
		title: 'Principles for Initialization and Architecture Selection in GNNs',
		url: 'https://doi.org/10.1137/23M1600621',
		description:
			'Foundational work with Boris Hanin on stable graph network design for physics-scale inference workloads.',
	},
];

const focusAreas = [
	{
		title: 'Physics + ML',
		body: 'I design graph-based reconstruction and search pipelines for the CMS experiment, with an emphasis on robust, uncertainty-aware models.',
	},
	{
		title: 'Experimental Discovery',
		body: 'From charged particle tracking to exotic Higgs searches, my work bridges detector data and theory-motivated analyses.',
	},
	{
		title: 'Teaching & Mentoring',
		body: 'Lecturer for Princeton\'s introductory physics sequence and creator of machine learning workshops for researchers.',
	},
];

const connections = [
	{ label: 'Email', href: 'mailto:jdezoort@princeton.edu' },
	{ label: 'GitHub', href: 'https://github.com/GageDeZoort' },
	{ label: 'Twitter/X', href: 'https://x.com/GDezoort' },
	{ label: 'CV', href: '/docs/Gage-DeZoort-CV.pdf' },
];
---

<Layout title={pageTitle} description={description}>
	<header class="hero">
		<div class="hero__text">
			<p class="hero__eyebrow">Gage DeZoort · Princeton University</p>
			<h1>
				Particle physics meets machine learning for precision discovery.
			</h1>
			<p class="hero__lede">
				Postdoctoral Research Associate and Lecturer in the Department of Physics at Princeton.
				I develop graph neural network methods that help the CMS experiment push toward new physics.
			</p>
			<div class="hero__actions">
				<a class="button button--primary" href="/docs/Gage-DeZoort-CV.pdf" target="_blank" rel="noreferrer">
					View CV
				</a>
				<a class="button button--ghost" href="mailto:jdezoort@princeton.edu">
					Say hello
				</a>
			</div>
		</div>
		<div class="hero__portrait">
			<div class="hero__frame">
				<img src="/images/headshot.jpg" alt="Portrait of Gage DeZoort" loading="lazy" decoding="async" />
			</div>
		</div>
	</header>

	<main class="content">
		<section class="section-card research">
			<div class="research__intro">
				<h2 class="section-title">Current focus</h2>
				<p class="section-lede">
					Building statistical and machine-learning tools that can thrive in the high pile-up regime of the HL-LHC,
					bridging principled theory with deployable systems for the CMS collaboration.
				</p>
			</div>
			<ul class="focus-grid">
				{focusAreas.map((item) => (
					<li>
						<h3>{item.title}</h3>
						<p>{item.body}</p>
					</li>
				))}
			</ul>
		</section>

		<section class="section-card highlights">
			<h2 class="section-title">Selected highlights</h2>
			<div class="highlight-grid">
				{highlights.map((item) => (
					<a href={item.url} class="highlight-card" target="_blank" rel="noreferrer">
						<span class="highlight-card__kicker">{item.kicker}</span>
						<h3>{item.title}</h3>
						<p>{item.description}</p>
						<span class="highlight-card__link">Read more →</span>
					</a>
				))}
			</div>
		</section>

		<section class="section-card connect">
			<div>
				<h2 class="section-title">Let’s collaborate</h2>
				<p class="section-lede">
					Available for conversations on graph-based ML, detector reconstruction, and inclusive physics education.
				</p>
			</div>
			<ul class="connect-list">
				{connections.map((link) => (
					<li>
						<a href={link.href} target={link.href.startsWith('http') ? '_blank' : undefined} rel="noreferrer">
							{link.label}
						</a>
					</li>
				))}
			</ul>
		</section>
	</main>
</Layout>

<style>
	.hero {
		display: grid;
		gap: clamp(1.5rem, 3vw, 3rem);
		grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
		align-items: center;
		max-width: var(--max-width);
		margin: 0 auto clamp(3rem, 6vw, 5rem);
	}

	.hero__eyebrow {
		font-size: 0.9rem;
		font-weight: 500;
		text-transform: uppercase;
		letter-spacing: 0.18em;
		color: var(--text-soft);
		margin: 0 0 1.25rem;
	}

	h1 {
		margin: 0 0 1.25rem;
		font-family: 'Fraunces', 'Times New Roman', serif;
		font-size: clamp(2.25rem, 4vw, 3.4rem);
		line-height: 1.1;
		letter-spacing: -0.015em;
	}

	.hero__lede {
		margin: 0 0 1.8rem;
		font-size: clamp(1.05rem, 1.25vw, 1.25rem);
		line-height: 1.7;
		color: var(--text-soft);
		max-width: 36rem;
	}

	.hero__actions {
		display: flex;
		flex-wrap: wrap;
		gap: 0.85rem;
	}

	.button {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		padding: 0.75rem 1.5rem;
		border-radius: 999px;
		font-weight: 600;
		font-size: 0.95rem;
		border: 1px solid transparent;
		transition:
			transform 0.2s ease,
			box-shadow 0.2s ease,
			border-color 0.2s ease;
	}

	.button--primary {
		background: linear-gradient(135deg, #335cff 0%, #5d8bff 100%);
		color: white;
		box-shadow: 0 14px 28px rgba(51, 92, 255, 0.25);
	}

	.button--primary:hover,
	.button--primary:focus-visible {
		transform: translateY(-2px);
		box-shadow: 0 18px 32px rgba(51, 92, 255, 0.3);
	}

	.button--ghost {
		color: var(--text);
		border-color: rgba(28, 31, 36, 0.12);
		background: var(--surface-strong);
	}

	.button--ghost:hover,
	.button--ghost:focus-visible {
		transform: translateY(-1px);
		border-color: rgba(28, 31, 36, 0.2);
		box-shadow: 0 10px 24px rgba(22, 33, 52, 0.1);
	}

	.hero__portrait {
		display: flex;
		justify-content: center;
	}

	.hero__frame {
		position: relative;
		padding: clamp(0.75rem, 2vw, 1.5rem);
		border-radius: 32px;
		background: linear-gradient(160deg, rgba(51, 92, 255, 0.15), rgba(255, 255, 255, 0.92));
		border: 1px solid rgba(51, 92, 255, 0.2);
		box-shadow: 0 24px 50px rgba(22, 33, 52, 0.2);
	}

	.hero__frame::before {
		content: '';
		position: absolute;
		inset: 12px;
		border-radius: 24px;
		background: var(--surface-strong);
		opacity: 0.75;
		z-index: 1;
	}

	.hero__frame img {
		position: relative;
		z-index: 2;
		display: block;
		width: clamp(220px, 32vw, 320px);
		border-radius: 20px;
		filter: saturate(1.05);
	}

	.content {
		display: flex;
		flex-direction: column;
		gap: clamp(1.5rem, 3vw, 2.75rem);
		max-width: var(--max-width);
		margin: 0 auto clamp(4rem, 8vw, 5.5rem);
	}

	.focus-grid {
		display: grid;
		list-style: none;
		margin: 0;
		padding: 0;
		gap: 1.5rem;
		grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
	}

	.focus-grid h3 {
		margin: 0 0 0.5rem;
		font-size: 1.1rem;
		font-weight: 600;
	}

	.focus-grid p {
		margin: 0;
		color: var(--text-soft);
		line-height: 1.6;
		font-size: 0.98rem;
	}

	.highlight-grid {
		display: grid;
		gap: 1.25rem;
		grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
	}

	.highlight-card {
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
		padding: 1.5rem;
		border-radius: 20px;
		border: 1px solid rgba(51, 92, 255, 0.18);
		background: linear-gradient(165deg, rgba(51, 92, 255, 0.14), rgba(255, 255, 255, 0.95));
		box-shadow: 0 18px 40px rgba(22, 33, 52, 0.16);
		transition: transform 0.2s ease, box-shadow 0.2s ease;
		color: inherit;
		text-decoration: none;
	}

	.highlight-card:hover,
	.highlight-card:focus-visible {
		transform: translateY(-4px);
		box-shadow: 0 26px 52px rgba(22, 33, 52, 0.22);
	}

	.highlight-card__kicker {
		font-size: 0.8rem;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 0.16em;
		color: rgba(51, 92, 255, 0.8);
	}

	.highlight-card h3 {
		margin: 0;
		font-size: 1.2rem;
		font-weight: 600;
		line-height: 1.3;
	}

	.highlight-card p {
		margin: 0;
		color: var(--text-soft);
		line-height: 1.6;
		font-size: 0.98rem;
	}

	.highlight-card__link {
		font-size: 0.9rem;
		font-weight: 600;
		color: rgba(28, 31, 36, 0.72);
	}

	.connect {
		display: grid;
		gap: 2rem;
		align-items: center;
		grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
	}

	.connect-list {
		display: grid;
		gap: 0.75rem;
		list-style: none;
		padding: 0;
		margin: 0;
	}

	.connect-list a {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		padding: 0.75rem 1.1rem;
		border-radius: 16px;
		border: 1px solid rgba(28, 31, 36, 0.08);
		background: rgba(255, 255, 255, 0.9);
		box-shadow: 0 8px 20px rgba(22, 33, 52, 0.08);
		transition: transform 0.2s ease, box-shadow 0.2s ease;
		font-weight: 550;
	}

	.connect-list a:hover,
	.connect-list a:focus-visible {
		transform: translateX(3px);
		box-shadow: 0 14px 28px rgba(22, 33, 52, 0.12);
	}

	@media (max-width: 640px) {
		.hero__frame::before {
			inset: 8px;
		}

		.hero__frame img {
			width: clamp(200px, 70vw, 260px);
		}
	}
</style>
