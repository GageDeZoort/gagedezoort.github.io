---
import Layout from '../layouts/Layout.astro';

const pageTitle = 'Gage DeZoort · Particle Physics & Machine Learning';
const description =
	'Postdoctoral researcher at Princeton designing graph neural network methods for high-energy physics and precision discovery.';

const highlights = [
	{
		kicker: 'Review',
		title: 'Graph Neural Networks at the Large Hadron Collider',
		url: 'https://doi.org/10.1038/s42254-023-00569-0',
		description:
			'Surveying geometric deep learning advances that power tracking, triggering, and anomaly discovery at the HL-LHC.',
	},
	{
		kicker: 'Journal',
		title: 'Principles for Initialization and Architecture Selection in GNNs',
		url: 'https://doi.org/10.1137/23M1600621',
		description:
			'Foundational work with Boris Hanin on stable graph network design for physics-scale inference workloads.',
	},
];

const focusAreas = [
	{
		title: 'Hyperparameter Transfer',
		body: 'Developing cross-detector priors that let graph neural networks and graph transformers inherit optimal hyperparameters without exhaustive scans.',
	},
	{
		title: 'Stellar Stream Reconstruction',
		body: 'Reassembling disrupted stellar streams by pairing astrophysical simulations with geometric learning pipelines tuned for sparse observations.',
	},
	{
		title: 'Jet Tagging',
		body: 'Designing fast, uncertainty-aware jet taggers that survive high pile-up conditions and align with downstream physics analyses.',
	},
];

const connections = [
	{ label: 'Email', href: 'mailto:jdezoort@princeton.edu' },
	{ label: 'GitHub', href: 'https://github.com/GageDeZoort' },
	{ label: 'Twitter/X', href: 'https://x.com/GDezoort' },
	{ label: 'CV', href: '/docs/Gage-DeZoort-CV.pdf' },
];
---

<Layout title={pageTitle} description={description}>
	<header class="hero">
		<div class="hero__text">
			<p class="hero__eyebrow">Gage DeZoort · Princeton University</p>
			<div class="hero__badge">
				<span>Physics</span>
				<span class="hero__badge-cross" aria-hidden="true"></span>
				<span>ML</span>
			</div>
			<h1>
				Particle physics meets machine learning for precision discovery.
			</h1>
			<p class="hero__lede">
				Postdoctoral Research Associate and Lecturer in the Department of Physics at Princeton.
				I develop graph neural network methods that help the CMS experiment push toward new physics.
			</p>
			<div class="hero__actions">
				<a class="button button--primary" href="/docs/Gage-DeZoort-CV.pdf" target="_blank" rel="noreferrer">
					View CV
				</a>
				<a class="button button--ghost" href="mailto:jdezoort@princeton.edu">
					Say hello
				</a>
			</div>
		</div>
		<div class="hero__portrait">
			<div class="hero__frame">
				<img src="/images/headshot.jpg" alt="Portrait of Gage DeZoort" loading="lazy" decoding="async" />
			</div>
		</div>
	</header>

	<main class="content">
		<section class="section-card research">
			<div class="research__intro">
				<h2 class="section-title">Current focus</h2>
				<p class="section-lede">
					Building statistical and machine-learning tools that can thrive in the high pile-up regime of the HL-LHC,
					bridging principled theory with deployable systems for the CMS collaboration.
				</p>
			</div>
			<ul class="focus-grid">
				{focusAreas.map((item) => (
					<li>
						<h3>{item.title}</h3>
						<p>{item.body}</p>
					</li>
				))}
			</ul>
		</section>

		<section class="section-card highlights">
			<h2 class="section-title">Selected highlights</h2>
			<div class="highlight-grid">
				{highlights.map((item) => (
					<a href={item.url} class="highlight-card" target="_blank" rel="noreferrer">
						<span class="highlight-card__kicker">{item.kicker}</span>
						<h3>{item.title}</h3>
						<p>{item.description}</p>
						<span class="highlight-card__link">Read more →</span>
					</a>
				))}
			</div>
		</section>

		<section class="section-card connect">
			<div>
				<h2 class="section-title">Let's collaborate</h2>
				<p class="section-lede">
					Available for conversations on graph based ML, detector reconstruction, and inclusive physics education.
				</p>
			</div>
			<ul class="connect-list">
				{connections.map((link) => (
					<li>
						<a href={link.href} target={link.href.startsWith('http') ? '_blank' : undefined} rel="noreferrer">
							{link.label}
						</a>
					</li>
				))}
			</ul>
		</section>
	</main>
</Layout>

<style>
	.hero {
		position: relative;
		display: grid;
		gap: clamp(1.6rem, 3vw, 3.4rem);
		grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
		align-items: center;
		max-width: var(--max-width);
		margin: 0 auto clamp(3rem, 6vw, 5rem);
		padding: clamp(1.5rem, 3vw, 2rem);
		border-radius: 30px;
		border: 1px solid rgba(148, 163, 184, 0.16);
		background: linear-gradient(140deg, rgba(15, 23, 42, 0.72), rgba(2, 6, 23, 0.55));
		box-shadow: inset 0 0 0 1px rgba(56, 189, 248, 0.06);
		overflow: hidden;
	}

	.hero::before {
		content: '';
		position: absolute;
		inset: -60% 35% 55% -40%;
		background: linear-gradient(120deg, rgba(56, 189, 248, 0.35), rgba(168, 85, 247, 0.18));
		filter: blur(110px);
		opacity: 0.85;
		z-index: 0;
	}

	.hero::after {
		content: '';
		position: absolute;
		inset: 0;
		background-image: linear-gradient(
				0deg,
				transparent 0,
				transparent 18px,
				rgba(148, 163, 184, 0.06) 18px,
				rgba(148, 163, 184, 0.06) 19px
			),
			linear-gradient(
				90deg,
				transparent 0,
				transparent 18px,
				rgba(148, 163, 184, 0.06) 18px,
				rgba(148, 163, 184, 0.06) 19px
			);
		background-size: 20px 20px;
		opacity: 0.4;
		mix-blend-mode: lighten;
		pointer-events: none;
	}

	.hero__eyebrow {
		position: relative;
		z-index: 1;
		font-size: 0.9rem;
		font-weight: 500;
		text-transform: uppercase;
		letter-spacing: 0.18em;
		color: rgba(148, 163, 184, 0.9);
		margin: 0 0 1.1rem;
	}

	.hero__badge {
		position: relative;
		z-index: 1;
		display: inline-flex;
		align-items: center;
		gap: 0.75rem;
		padding: 0.4rem 0.85rem;
		border-radius: 999px;
		background: rgba(15, 118, 110, 0.2);
		border: 1px solid rgba(94, 234, 212, 0.22);
		color: #5eead4;
		font-size: 0.85rem;
		font-weight: 600;
		letter-spacing: 0.08em;
		text-transform: uppercase;
		backdrop-filter: blur(8px);
		margin-bottom: 1.2rem;
	}

	.hero__badge span:not(.hero__badge-cross) {
		display: inline-flex;
		align-items: center;
		gap: 0.25rem;
	}

	.hero__badge-cross {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		width: 1.1rem;
		height: 1.1rem;
		border-radius: 50%;
		background: rgba(15, 118, 110, 0.28);
		border: 1px solid rgba(45, 212, 191, 0.32);
		box-shadow: inset 0 0 12px rgba(13, 148, 136, 0.3), 0 0 16px rgba(13, 148, 136, 0.25);
	}

	.hero__badge-cross::before {
		content: '×';
		font-size: 0.9rem;
		font-weight: 700;
		background: linear-gradient(135deg, rgba(226, 232, 240, 0.95), rgba(14, 165, 233, 0.85));
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	h1 {
		position: relative;
		z-index: 1;
		margin: 0 0 1.2rem;
		font-family: 'Space Grotesk', 'Inter', sans-serif;
		font-size: clamp(2.3rem, 4vw, 3.5rem);
		line-height: 1.08;
		letter-spacing: -0.015em;
		color: #f8fafc;
	}

	.hero__lede {
		position: relative;
		z-index: 1;
		margin: 0 0 1.75rem;
		font-size: clamp(1.08rem, 1.3vw, 1.28rem);
		line-height: 1.75;
		color: var(--text-soft);
		max-width: 36rem;
	}

	.hero__actions {
		position: relative;
		z-index: 1;
		display: flex;
		flex-wrap: wrap;
		gap: 0.9rem;
	}

	.button {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		padding: 0.78rem 1.65rem;
		border-radius: 999px;
		font-weight: 600;
		font-size: 0.92rem;
		border: 1px solid transparent;
		letter-spacing: 0.08em;
		text-transform: uppercase;
		transition:
			transform 0.2s ease,
			box-shadow 0.2s ease,
			border-color 0.2s ease;
	}

	.button--primary {
		background: linear-gradient(135deg, #38bdf8 0%, #60a5fa 55%, #8b5cf6 100%);
		color: white;
		box-shadow: 0 18px 32px rgba(56, 189, 248, 0.3);
	}

	.button--primary:hover,
	.button--primary:focus-visible {
		transform: translateY(-2px);
		box-shadow: 0 24px 40px rgba(56, 189, 248, 0.38);
	}

	.button--ghost {
		color: var(--text);
		border-color: rgba(148, 163, 184, 0.22);
		background: rgba(15, 23, 42, 0.7);
		box-shadow: 0 12px 26px rgba(2, 6, 23, 0.35);
	}

	.button--ghost:hover,
	.button--ghost:focus-visible {
		transform: translateY(-1px);
		border-color: rgba(148, 163, 184, 0.3);
		box-shadow: 0 18px 40px rgba(2, 6, 23, 0.42);
	}

	.hero__portrait {
		position: relative;
		z-index: 1;
		display: flex;
		justify-content: center;
	}

	.hero__frame {
		position: relative;
		padding: clamp(0.9rem, 2.2vw, 1.6rem);
		border-radius: 32px;
		background: linear-gradient(160deg, rgba(56, 189, 248, 0.1), rgba(99, 102, 241, 0.1));
		border: 1px solid rgba(56, 189, 248, 0.28);
		box-shadow: 0 32px 60px rgba(2, 6, 23, 0.42);
	}

	.hero__frame::before {
		content: '';
		position: absolute;
		inset: 12px;
		border-radius: 24px;
		background: linear-gradient(160deg, rgba(2, 6, 23, 0.92), rgba(15, 23, 42, 0.78));
		opacity: 0.95;
		z-index: 1;
	}

	.hero__frame::after {
		content: '';
		position: absolute;
		inset: 6px;
		border-radius: 26px;
		border: 1px solid rgba(56, 189, 248, 0.22);
		opacity: 0.85;
		z-index: 1;
	}

	.hero__frame img {
		position: relative;
		z-index: 2;
		display: block;
		width: clamp(220px, 32vw, 320px);
		border-radius: 20px;
		filter: saturate(1.08);
	}

	.content {
		display: flex;
		flex-direction: column;
		gap: clamp(1.6rem, 3vw, 2.8rem);
		max-width: var(--max-width);
		margin: 0 auto clamp(3.5rem, 7vw, 5rem);
	}

	.focus-grid {
		display: grid;
		list-style: none;
		margin: 0;
		padding: 0;
		gap: 1.5rem;
		grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
	}

	.focus-grid h3 {
		margin: 0 0 0.6rem;
		font-size: 1.12rem;
		font-weight: 600;
		color: #e2e8f0;
	}

	.focus-grid li {
		position: relative;
		overflow: hidden;
		padding: 1.45rem 1.35rem;
		border-radius: 20px;
		border: 1px solid rgba(148, 163, 184, 0.14);
		background: var(--surface-strong);
		box-shadow: inset 0 0 0 1px rgba(56, 189, 248, 0.05);
		backdrop-filter: blur(10px);
		color: var(--text-soft);
		line-height: 1.65;
		font-size: 0.98rem;
	}

	.focus-grid li::before {
		content: '';
		position: absolute;
		inset: -35% 55% 58% -35%;
		background: radial-gradient(circle, rgba(56, 189, 248, 0.32), transparent 62%);
		opacity: 0.55;
		z-index: 0;
	}

	.highlight-grid {
		display: grid;
		gap: 1.25rem;
		grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
	}

	.highlight-card {
		position: relative;
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
		padding: 1.6rem;
		border-radius: 20px;
		border: 1px solid rgba(56, 189, 248, 0.22);
		background: linear-gradient(165deg, rgba(15, 23, 42, 0.92), rgba(37, 99, 235, 0.42));
		box-shadow: 0 32px 70px rgba(2, 6, 23, 0.5);
		transition: transform 0.2s ease, box-shadow 0.2s ease;
		color: inherit;
		text-decoration: none;
		overflow: hidden;
	}

	.highlight-card::before {
		content: '';
		position: absolute;
		inset: -20% -35% 50% 55%;
		background: radial-gradient(circle, rgba(168, 85, 247, 0.4), transparent 68%);
		opacity: 0.65;
		z-index: 0;
	}

	.highlight-card:hover,
	.highlight-card:focus-visible {
		transform: translateY(-4px);
		box-shadow: 0 42px 82px rgba(2, 6, 23, 0.6);
	}

	.highlight-card__kicker {
		position: relative;
		z-index: 1;
		font-size: 0.78rem;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 0.16em;
		color: rgba(94, 234, 212, 0.85);
	}

	.highlight-card h3 {
		position: relative;
		z-index: 1;
		margin: 0;
		font-size: 1.22rem;
		font-weight: 600;
		line-height: 1.3;
		color: #f8fafc;
	}

	.highlight-card p {
		position: relative;
		z-index: 1;
		margin: 0;
		color: var(--text-soft);
		line-height: 1.65;
		font-size: 0.98rem;
	}

	.highlight-card__link {
		position: relative;
		z-index: 1;
		font-size: 0.9rem;
		font-weight: 600;
		color: rgba(125, 211, 252, 0.92);
	}

	.connect {
		display: grid;
		gap: 2rem;
		align-items: center;
		grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
	}

	.connect-list {
		display: grid;
		gap: 0.85rem;
		list-style: none;
		padding: 0;
		margin: 0;
	}

	.connect-list a {
		position: relative;
		display: inline-flex;
		align-items: center;
		gap: 0.6rem;
		padding: 0.85rem 2.6rem 0.85rem 1.2rem;
		border-radius: 16px;
		border: 1px solid rgba(148, 163, 184, 0.2);
		background: rgba(15, 23, 42, 0.82);
		box-shadow: 0 24px 60px rgba(2, 6, 23, 0.42);
		transition: transform 0.2s ease, box-shadow 0.2s ease;
		font-weight: 620;
		color: var(--text);
	}

	.connect-list a:hover,
	.connect-list a:focus-visible {
		transform: translateX(5px);
		box-shadow: 0 32px 82px rgba(2, 6, 23, 0.55);
	}

	.connect-list a::after {
		content: '→';
		position: absolute;
		right: 1.1rem;
		font-size: 0.95rem;
		opacity: 0.65;
	}

	.connect-list a[target='_blank']::after {
		content: '↗';
		font-size: 0.9rem;
	}

	@media (max-width: 640px) {
		.hero {
			padding: 1.6rem;
		}

		.hero__frame::before {
			inset: 8px;
		}

		.hero__frame img {
			width: clamp(200px, 70vw, 260px);
		}
	}
</style>
